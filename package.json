{
  "name": "spectra-client",
  "author": {
    "name": "Spectra Team",
    "url": "https://www.valospectra.com"
  },
  "version": "0.2.20",
  "description": "https://www.valospectra.com",
  "private": true,
  "main": "./app/main.js",
  "overwolf": {
    "packages": [
      "gep"
    ]
  },
  "scripts": {
    "start": "rimraf app && npx tsc && copy-files-from-to && ow-electron . --owepm-packages-url=https://electronapi-qa.overwolf.com/packages",
    "start-aux": "rimraf app && npx tsc && copy-files-from-to && ow-electron . --owepm-packages-url=https://electronapi-qa.overwolf.com/packages --auxiliary",
    "start:live": "rimraf app && npx tsc && copy-files-from-to && ow-electron .",
    "build": "rimraf app && npx tsc && copy-files-from-to && rimraf dist && ow-electron-builder --publish=never",
    "publish": "rimraf app && npx tsc && copy-files-from-to && rimraf dist && ow-electron-builder --publish=always",
    "postinstall": "ow-electron-builder install-app-deps",
    "lint": "eslint ./src",
    "lint-fix": "eslint ./src --fix",
    "format": "prettier --write ./src"
  },
  "copyFiles": [
    {
      "from": "src/frontend/*",
      "to": "app/frontend/"
    },
    {
      "from": "src/assets/*",
      "to": "app/assets/"
    },
    {
      "from": "src/preload.js",
      "to": "app/preload.js"
    }
  ],
  "build": {
    "productName": "Spectra Client",
    "compression": "maximum",
    "nsisWeb": {
      "artifactName": "Spectra-Client-Setup.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": false,
      "differentialPackage": true
    },
    "win": {
      "target": [
        "nsis-web"
      ],
      "publish": {
        "provider": "github",
        "owner": "ValoSpectra",
        "publishAutoUpdate": true,
        "releaseType": "draft"
      }
    }
  },
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@overwolf/ow-electron": "31.7.9",
    "@overwolf/ow-electron-builder": "24.13.10",
    "@overwolf/ow-electron-packages-types": "^0.0.13",
    "@overwolf/types": "^3.24.7",
    "@types/electron-json-storage": "^4.5.4",
    "@types/node": "^22.13.10",
    "@types/semver": "^7.5.8",
    "copy-files-from-to": "^3.12.1",
    "electron": "31.7.7",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "dependencies": {
    "axios": "^1.8.3",
    "bufferutil": "^4.0.9",
    "dotenv": "^16.4.7",
    "electron-json-storage": "^4.6.0",
    "electron-log": "^5.3.2",
    "semver": "^7.7.1",
    "socket.io-client": "^4.8.1"
  },
  "packageManager": "yarn@4.5.1"
}
